{
  "version": 4,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "description": "Base settings for all builds",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "ninja-mixin",
      "hidden": true,
      "description": "Mixin to switch any build to Ninja",
      "generator": "Ninja"
    },
    {
      "name": "host-base",
      "hidden": true,
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-fpermissive"
      }
    },
    {
      "name": "android-base",
      "hidden": true,
      "inherits": "base",
      "toolchainFile": "$env{ANDROID_NDK_HOME}/build/cmake/android.toolchain.cmake",
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "Android",
        "ANDROID_PLATFORM": "26",
        "LITERT_AUTO_BUILD_TFLITE": "ON"
      }
    },
    {
      "name": "default",
      "displayName": "Host Release (Make)",
      "inherits": "host-base",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" }
    },
    {
      "name": "default-ninja",
      "displayName": "Host Release (Ninja)",
      "inherits": ["default", "ninja-mixin"]
    },
    {
      "name": "default-debug",
      "displayName": "Host Debug (Make)",
      "inherits": "host-base",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" }
    },
    {
      "name": "android-arm64",
      "displayName": "Android Release (Make)",
      "inherits": "android-base",
      "cacheVariables": {
        "ANDROID_ABI": "arm64-v8a",
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "android-arm64-ninja",
      "displayName": "Android Release (Ninja)",
      "inherits": ["android-arm64", "ninja-mixin"]
    }
  ]
}
